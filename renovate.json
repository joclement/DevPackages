{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>renovatebot/.github"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^install-hadolint.sh$"
      ],
      "matchStrings": [
        "VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s*"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "hadolint/hadolint"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^install-docker-compose.sh$"
      ],
      "matchStrings": [
        "VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s*"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "docker/compose"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^install-vim-from-source.sh$"
      ],
      "matchStrings": [
        "VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s*"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "vim/vim"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchDepNames": [
        "docker/compose",
        "hadolint/hadolint",
        "vim/vim"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false
    }
  ]
}
