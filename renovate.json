{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>renovatebot/.github"
  ],
  "regexManagers": [
    {
      "fileMatch": ["/install-hadolint.sh$"],
      "matchStrings": [
        "VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "hadolint/hadolint"
    },
    {
      "fileMatch": ["/install-docker-compose.sh$"],
      "matchStrings": [
        "VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "docker/compose"
    },
    {
      "fileMatch": ["/install-vim-from-source.sh$"],
      "matchStrings": [
        "VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "vim/vim"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["github-releases"],
      "matchDepNames": ["docker/compose"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false
    }
  ]
}
