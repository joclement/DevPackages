{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>renovatebot/.github"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^install-hadolint.sh$"
      ],
      "matchStrings": [
        "VERSION=\"(?<currentValue>.+?)\"\\n"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "hadolint/hadolint"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^install-gitlab-cli.sh$"
      ],
      "matchStrings": [
        "VERSION=\"(?<currentValue>.+?)\"\\n"
      ],
      "datasourceTemplate": "gitlab-releases",
      "depNameTemplate": "gitlab-org/cli"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^install-vim-from-source.sh$"
      ],
      "matchStrings": [
        "VERSION=\"(?<currentValue>.+?)\"\\n"
      ],
      "currentValueTemplate": "v9.1.0373",
      "datasourceTemplate": "git-tags",
      "depNameTemplate": "https://github.com/vim/vim.git"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases",
        "github-tags"
      ],
      "matchDepNames": [
        "hadolint/hadolint",
        "vim/vim"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false
    }
  ]
}
