root = true

[*]
end_of_line = lf
charset = utf-8
max_line_length = 90
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.sh]
indent_size = 4
binary_next_line = true
switch_case_indent = true
space_redirects = true

[README.md]
max_line_length = unset
